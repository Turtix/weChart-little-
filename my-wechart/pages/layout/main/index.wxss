/* pages/layout/main(storage)/index.wxss */
@import './template/list.wxss';
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.main-wrap{
  width: 100%;
  height: 100%;
  background: rgb(247,247,247);
  overflow-x:hidden; 
  overflow-y: auto;
}

/* 头部区域 */
.main-wrap .head{
  width: 100%;
  height: 113rpx;
}
.main-wrap .head image{
  width: 100%;
  height: 100%;
}

/* 轮播区域 */
swiper{
  width: 100%;
  height: 375rpx
}
swiper swiper-item image{
  width: 100%;
  height: 100%;
}

/* 课程列表区域 */
.course{
  margin-top:20rpx;
  width: 100%;
  height: 400rpx;
  background: white;
  overflow: hidden;
}
.course .course-title{
  margin: 33rpx 0 38rpx 0;
  display:flex;
  flex-direction: column;
  align-items: center;
}
.course .course-title > text:nth-child(1){
  margin-bottom: 20rpx;
  font-size: 44rpx;
}
.course .course-title > text:nth-child(2){
  font-size: 29rpx;
}


.course .course-list{
  display: flex;
  justify-content: space-around;
}
.course .course-list .item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.course .course-list .item image{
  width: 122rpx;
  height: 122rpx;
}
.course .course-list .item text{
  font-size: 25rpx;
}



/* 底部区域 */

/*
左半部分(box-sizing:border-box)
    尺寸: 264*330
    空隙: 上 20 右 20 下 0 左 20
右半部分(box-sizing:border-box)
    尺寸: 486*300
    空隙: 上 15 右 0 下 15 左 0 */

.footer{
  width: 100%;
  height: 330rpx;
  background: rgb(51, 51, 51);
  display: flex;
}
.footer .left{
  display:flex;
  flex-direction: column;
  box-sizing:border-box;
  width:264rpx;
  height: 330rpx;
  padding: 20rpx 20rpx 0 20rpx
}
.footer .left image{
  width: 100%;
  height: 100%;
}
.footer .left  text{
  font-size: 30rpx;
  text-align: center;
  color: white;
}
.footer .right{
    box-sizing:border-box;
    width:486rpx;
    height: 300rpx;
    padding: 15rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.footer .right view{
  display: flex;
  flex-direction: column;
}
.footer .right text{
  font-size: 27rpx;
  color: white;
}
